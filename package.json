{
  "name": "lit-code",
  "displayName": "lit-code",
  "description": "Literary code extension for VSCode, providing tools for writing books in Markdown.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "text.html.markdown"
        ],
        "scopeName": "lit.injection",
        "path": "./syntaxes/lit.injection.json"
      }
    ],
    "commands": [
      {
        "command": "lit-code.addNewLines",
        "title": "Lit-code: Add newlines"
      },
      {
        "command": "lit-code.splitChapters",
        "title": "Lit-code: Split chapters"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-jest": "^26.0.1",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "jest": "^26.0.1",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "change-case": "^4.1.1"
  }
}